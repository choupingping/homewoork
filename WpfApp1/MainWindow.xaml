                    <GradientStop Color="#FFDD1D1D" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.SelectionTextBrush>
        </TextBox>
        <Button x:Name="Button1" Content="確定" HorizontalAlignment="Left" Margin="663,29,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="49" Width="97" Background="#FF953737" FontSize="24" Click="Button1_Click"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="30,116,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="730" Height="259" ContextMenuClosing="TextBox2_ContextMenuClosing" FontSize="24"/>

